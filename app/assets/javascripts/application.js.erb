$(document).foundation();

$(document).ready(function() {
	function submit(email) {
		console.log(email);
		$.post('<%= Rails.application.routes.url_helpers.landing_register_path %>', {email: email}, function(data) {

		});
	};

	$('input[type="submit"].in-submit').click(function() {
		submit($(this).parent().find('input[type="email"]').val());
		$(this).parent().hide();
		$('div.in-submit').show();
		return false;
	});

	$('input[type="submit"].second-submit').click(function() {
		submit($(this).parent().parent().find('input[type="email"]').val());
		$(this).parent().parent().parent().hide();
		$('div.second-submit').show();
		return false;
	});
});
