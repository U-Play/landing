<% content_for :javascript do %>
  <script type="text/javascript">
    $(document).ready(function() {
        mixpanel.track("Landing page render");
    });
  </script>
<% end %>

<div id="in-touch" class="wrapper">
  <section class="row">
    <div class="small-12 columns">
      <div class="uplay-logo"></div>
    </div>
  </section>
  <section class="slogan row">
    <header class="small-4 columns">
      <h1>TAKE YOUR COMPETITION FURTHER</h1>
      <h5>INTERNATIONAL UNIVERSITY <br />SPORTS PLATFORM</h5>

      <div class="main-submit">
        <form method="post" action="<%= landing_register_url %>">
          <input type="email" name="useremail" placeholder="enter your e-mail, we'll update you" />
          <input class="in-submit" type="submit" value="GET IN TOUCH!" />
        </form>
        <section class="success-message hide">
          <div class="check-icon">
          </div>
          <div>
            Registration submited!
          </div>
        </section>
        <section class="error-message hide">
          <div>Your email is invalid!</div>
        </section>
      </div>

    </header>
    <div class="laptop small-8 columns">
    </div>
  </section>
</div>

<div id="athletes" class="wrapper">
  <div class="row">
    <section class="small-6 columns">
      <header>
        <div class="athletes-icon"></div>
        <h3>ATHLETES</h3>
        <p>Exhibit your profile</p>
        <p>Share your achievements</p>
        <p>Connect with other athletes</p>
      </header>
    </section>
    <section class="small-6 columns">
      <header>
        <div class="organizers-icon"></div>
        <h3>ORGANIZERS</h3>
        <p>Engage the athletes</p>
        <p>Share the hightlights</p>
        <p>Manage your tournaments</p>
      </header>
    </section>
  </div>
</div>

<div id="second-sign" class="wrapper">
  <section class="row">
    <section>
      <div>SIGN UP TO GET MORE INFO</div>
    </section>
    <section class="second-submit">
      <div class="form-wrap">
        <form method="post" action="<%= landing_register_url %>">
          <section>
            <input type="email" name="useremail" placeholder="enter your e-mail, we'll update you" />
          </section>
          <section>
            <input class="second-submit" type="submit" value="SEND" />
          </section>
        </form>
      </div>
      <section class="success-message hide">
        <div>
          Registration submited!
        </div>
      </section>
      <section class="error-message hide">
        <div>Your email is invalid!</div>
      </section>
    </section>
  </section>
</div>

<footer class="wrapper">
  <section class="row">
    <section class="small-6 columns">
      <div>
        @2013, All rights reserved UPlayPro, Made in Braga
      </div>
    </section>
    <section class="small-6 columns">
      <%= image_tag 'facebook.png' %>
      <%= image_tag 'twitter.png' %>
    </section>
  </section>
</footer>